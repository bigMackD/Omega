@using Omega.Models.User
@model IEnumerable<UserViewModel>

@{
    ViewBag.Title = "Użytkownicy";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Dodaj użytkownika", "Create")
</p>
<table class="table">
    <tr>
        <th>Rola</th>
        <th>Imię i Nazwisko</th>
        <th>Czy aktywny?</th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Role.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FullName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IsActiveAsString)
        </td>
        <td>
            @Html.ActionLink("Edytuj", "Edit", new { id=item.Role.RoleId }) |
            @Html.ActionLink("Szczegóły", "Details", new { id=item.Role }) |
            @Html.ActionLink("Usuń", "Delete", new { id=item.Role })
        </td>
    </tr>
}

</table>
